<StepperScreen>:
    name: 'stepper'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
    # switch screens button
        id: test_button4
        text: 'servo screen'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y": 0.75}
        color: 1, 0.3, 0.5, 1
        on_press: root.switch()

    DPEAButton:
    # switch screens button
        id: test_button5
        text: 'talon screen'
        size: 100, 100
        pos_hint: {"center_x": 0.75, "center_y": 0.75}
        color: 1, 0.3, 0.5, 1
        on_press: root.switchscreen5()

    DPEAButton:
    # motorOnOff button
        id: test_button
        text: 'Off'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        color: 1, 0.3, 0.5, 1
        on_press: root.motorOnOff()

    DPEAButton:
    # switchDirection button
        id: test_button3
        text: 'bop it, twist it'
        size: 100, 100
        pos_hint: {"center_x": 0.25, "center_y": 0.5}
        color: 1, 0.3, 0.5, 1
        on_press: root.switchDirection()

    DPEAButton:
    # motorSpecific button
        id: test_button2
        text: 'raccoon'
        size: 100, 100
        pos_hint: {"center_x": 0.75, "center_y": 0.5}
        color: 1, 0.3, 0.5, 1
        on_press: root.motorSpecificMother()

    Slider:
    # changes speed of stepper motor
        id: slider
        min: 0
        max: 10
        step: .5
        orientation: 'horizontal'
        size_hint: None, None
        size: 200, 30  # Adjust size as needed
        pos_hint: {"center_x": 0.5, "center_y": 0.15}
        sensitivity: 'handle'
        on_value: root.sliderSpeed()

    Label:
        id: slider_label
        text: str(slider.value)
        pos_hint: {"center_x": 0.5, "center_y": 0.185}