<StepperScreen>:
    name: 'stepper'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
    # motorOnOff button
        id: test_button
        text: 'Off'
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        color: 1, 0.3, 0.5, 1
        on_press: root.motorOnOff()

    DPEAButton:
    # switchDirection button
        id: test_button3
        text: 'bop it, twist it'
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1, 0.3, 0.5, 1
        on_press: root.switchDirection()

    DPEAButton:
    # motorSpecific button
        id: test_button2
        text: 'raccoon'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 1, 0.3, 0.5, 1
        on_press: root.motorSpecific()

    Slider:
    # changes speed of stepper motor
        id: slider
        min: 0
        max: 10
        step: 1
        orientation: 'horizontal'
        size_hint: None, None
        size: 200, 30  # Adjust size as needed
        pos: root.width * 0.5 - self.width / 2, root.height * 0.1
        on_touch_move: root.sliderSpeed()
        on_touch_down: root.sliderSpeed()

    Label:
        id: slider_label
        text: str(slider.value)
        center_x: root.width * .04
        center_y: root.height * -.2
