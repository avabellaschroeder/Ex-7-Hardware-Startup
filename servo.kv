<ServoScreen>:
    name: 'servo'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
    # servo button
        id: servo_button
        text: 'serving'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        color: 1, 0.3, 0.5, 1
        on_press: root.servo()

    DPEAButton:
    # white and black wire switch
    # hardware switch
        id: switching_button
        text: 'use the switch (w&b wire)'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y": 0.25}
        color: 1, 0.3, 0.5, 1
        on_press: root.switchthreading()

    DPEAButton:
    # switch screens button
        id: switching_button2
        text: 'stepper screen'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y": 0.75}
        color: 1, 0.3, 0.5, 1
        on_press: root.switchscreen2()