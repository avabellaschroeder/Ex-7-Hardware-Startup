<TalonScreen>:
    name: 'talon'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
    # switch screens button
        id: switch_button
        text: 'stepper screen'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y": 0.75}
        color: 1, 0.3, 0.5, 1
        on_press: root.switchscreent1()

    DPEAButton:
    # talon button
        id: talon_button
        text: 'talented or whateva'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        color: 1, 0.3, 0.5, 1
        on_press: root.talonthreading()

    DPEAButton:
    # talon stop button
        id: talonstop_button
        text: 'stop that ship'
        size: 100, 100
        pos_hint: {"center_x": 0.75, "center_y": 0.5}
        color: 1, 0.3, 0.5, 1
        on_press: root.talonstop()